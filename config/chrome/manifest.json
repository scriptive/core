{
  "name": "Appname",
  "short_name": "Appname",
  "description": "Appname description",
  "manifest_version": 2,
  "version": "1.0.0",
  "icons": {
    "16": "img/icon.16.png",
    "32": "img/icon.32.png",
    "48": "img/icon.48.png",
    "128": "img/icon.128.png"
  },
  "app": {
    "background": {
      "scripts": ["js/chrome.js"]
    }
  },
  "permissions": [
	"<all_urls>","notifications","clipboardRead", "clipboardWrite",
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "storage","unlimitedStorage","webview","syncFileSystem"
  ],
  "file_handlers": {
    "text": {
      "types": [
          "text/*"
      ]
    }
  },
  "offline_enabled": true
}
